<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:background="@color/colorPrimary">
    <ImageButton
        android:id="@+id/btnNavBack"
        android:layout_width="36dp" android:layout_height="36dp"
        android:backgroundTint="@color/colorAccent"
        android:tint="@color/colorAccentText"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_back"/>
    <TextView
        android:id="@+id/txtNavTitle"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/gdl_centerhorizontal"
        app:layout_constraintEnd_toEndOf="@id/gdl_centerhorizontal"
        android:textColor="@color/colorPrimaryText"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:text="Title"/>
    <android.support.constraint.Guideline
        android:id="@+id/gdl_centerhorizontal"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>
</android.support.constraint.ConstraintLayout>